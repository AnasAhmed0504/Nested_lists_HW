def read_matrix():
    rows = int(input())
    assert rows > 0
    lst_of_lsts = [0]*rows

    for row in range(rows):
        lst_of_lsts = list(map(int,input().split()))
        return rows, len(lst_of_lsts), lst_of_lsts
    
if __name__ == '__main__':
    rows, cols, matrix = read_matrix()
    mx, mx_r, mx_c = None, None, None

    for row_idx, row in enumerate(rows):
        for col_idx, value in enumerate(cols):
            if mx is None or mx <= value:
                mx, mx_r, mx_c = value, row_idx, col_idx
                
    print(f'max value at position {mx_r}, {mx_c}, with value {mx}')